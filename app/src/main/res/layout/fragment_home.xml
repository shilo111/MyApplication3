<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:max="100"
        app:layout_constraintBottom_toTopOf="@+id/stepCountTextView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    


    <TextView
        android:id="@+id/stepCountTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step Count: 0"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />









    <!-- res/layout/table_row_item.xml -->
    <TableLayout
        android:layout_width="364dp"
        android:layout_height="178dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.464">

        <!-- Header Row -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:padding="8dp"
                android:text=""
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:padding="8dp"
                android:text="stats"
                android:textStyle="bold" />

            <!-- Add more TextViews for additional columns as needed -->

        </TableRow>

        <!-- Data Rows -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center"
                android:padding="8dp"
                android:text="Calories" />

            <TextView
                android:id="@+id/CaloriesT"
                android:gravity="center"
                android:padding="8dp"
                android:text="No data" />


            <!-- Add more TextViews for additional columns as needed -->

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:padding="8dp"
                android:text="Goal Steps" />

            <TextView
                android:id="@+id/GoalT"
                android:gravity="center"
                android:padding="8dp"
                android:text="tt" />


            <!-- Add more TextViews for additional columns as needed -->

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:padding="8dp"
                android:text="Diner" />

            <TextView
                android:id="@+id/DinerT"
                android:gravity="center"
                android:padding="8dp"
                android:text="tt" />


            <!-- Add more TextViews for additional columns as needed -->

        </TableRow>


        <!-- Add more TableRow elements for additional data rows as needed -->

    </TableLayout>




</androidx.constraintlayout.widget.ConstraintLayout>